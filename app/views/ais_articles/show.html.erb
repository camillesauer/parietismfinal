<div class="container-ok">
<%= render "components/header" %>
<body style="background-color:black;">
  <div class="img-back-blanc"><%= link_to(image_tag("cc.png", alt: "QQ29 - all rights reserved."), ais_articles_path) %></div>
<div class="center-div">
<div class="card-article-show">
<div class="article_info img_article_show">
  <h1 class="feature title-article"><%= @ais_article.title %></h1>
<div class=" feature display-info-article-show">
  <p><%= @ais_article.date %></p>
  <p id="tiret">-</p>
  <p><%= @ais_article.lieu %></p>
</div>

<div class="display-info-article-show">
  <% if @ais_article.website_url1 != ""  %>
    <p class="feature link" ><%= link_to "Site internet", @ais_article.website_url1 %></p>
  <% end %>
</div>

<div class="display-info-article-show">
  <% if @ais_article.website_url2 != ""  %>
   <p class="feature link" ><%= link_to "Instagram", @ais_article.website_url2 %></p>
  <% end %>
</div>

<div class="center-div-2">

  <%= image_tag("#{@ais_article.image_url}") %>
  <h5><%= @ais_article.legend %></h5>
  <p><%= @ais_article.content %></p>
  <% if @ais_article.video != ""  %>
    <iframe width="845" height="560"
      src="<%= @ais_article.video %>"
      frameborder="0"
      allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
      allowfullscreen>
    </iframe>
  <% end %>
  <% if @ais_article.ais_article.image_url_2 != ""  %>
    <%= image_tag("#{@ais_article.image_url_2}") %>
  <% end %>
  <% if @ais_article.legend_2 != ""  %>
    <h5><%= @ais_article.legend_2 %></h5>
  <% end %>
  <% if @ais_article.content_2 != ""  %>
    <p><%= @ais_article.content_2 %></p>
  <% end %>
  <% if @ais_article.image_url_3 != ""  %>
    <%= image_tag("#{@ais_article.image_url_3}") %>
  <% end %>
  <% if @ais_article.legend_3 != ""  %>
    <h5><%= @ais_article.legend_3 %></h5>
  <% end %>
  <% if @ais_article.content_3 != ""  %>
    <p><%= @ais_article.content_3 %></p>
  <% end %>
  <% if @ais_article.image_url_4 != ""  %>
    <%= image_tag("#{@ais_article.image_url_4}") %>
  <% end %>

</div>
</div>
</div>
</div>

<%= render "components/footer" %>
</body>
</div>
